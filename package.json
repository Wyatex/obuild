{
  "name": "obuild",
  "version": "0.2.1",
  "description": "Zero-config ESM/TS package builder",
  "repository": "unjs/obuild",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./config": "./dist/config.mjs",
    "./transformers": "./dist/transformers/index.mjs"
  },
  "types": "./dist/index.d.mts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm obuild",
    "dev": "pnpm vitest",
    "lint": "eslint . && prettier -c src test",
    "lint:fix": "automd && eslint . --fix && prettier -w src test",
    "node-ts": "node --disable-warning=ExperimentalWarning --experimental-strip-types",
    "obuild": "pnpm node-ts src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && pnpm vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "c12": "^3.0.4",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "exsolve": "^1.0.5",
    "magic-string": "^0.30.17",
    "mlly": "^1.7.4",
    "oxc-minify": "^0.72.2",
    "oxc-parser": "^0.72.2",
    "oxc-transform": "^0.72.2",
    "pathe": "^2.0.3",
    "pkg-types": "^2.1.0",
    "pretty-bytes": "^7.0.0",
    "rolldown": "1.0.0-beta.10",
    "rolldown-plugin-dts": "^0.13.7",
    "semver": "^7.7.2",
    "tinyglobby": "^0.2.14"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@volar/typescript": "^2.4.12",
    "@vue/language-core": "^2.2.10",
    "@vue/language-core2.0": "npm:@vue/language-core@2.0.29",
    "automd": "^0.4.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.28.0",
    "eslint-config-unjs": "^0.4.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "vue": "^3.5.16",
    "vue-tsc": "^2.2.10",
    "vue-tsc1": "npm:vue-tsc@^1.8.27",
    "vue-tsc2.0": "npm:vue-tsc@2.0.29",
    "vue-sfc-transformer": "^0.1.16"
  },
  "peerDependencies": {
    "typescript": ">=5.7.3",
    "vue": "^3.5.13",
    "vue-sfc-transformer": "^0.1.1",
    "vue-tsc": "^1.8.27 || ^2.0.21"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "vue-sfc-transformer": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.11.0"
}
